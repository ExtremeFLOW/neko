module comm
  use mpi
  implicit none
  
  !> MPI communicator
  integer ::  NEKO_COMM

  !> MPI type for working precision of REAL types
  integer, parameter :: MPI_REAL_PRECISION = @NEKO_MPI_REAL_TYPE@

  
  !> MPI rank
  integer :: pe_rank

  !> MPI size of communicator
  integer :: pe_size

  !> I/O node
  logical :: nio

contains
  subroutine comm_init
    integer :: ierr
    logical :: initialized

    pe_rank = -1
    pe_size = 0
    nio = .false.

    call MPI_Initialized(initialized, ierr)
    
    if (.not.initialized) then
       call MPI_Init(ierr)       
    end if

!    MPI_REAL_PRECISION = @NEKO_MPI_REAL_TYPE@

    call MPI_Comm_dup(MPI_COMM_WORLD, NEKO_COMM, ierr)

    call MPI_Comm_rank(NEKO_COMM, pe_rank, ierr)
    call MPI_Comm_size(NEKO_COMM, pe_size, ierr)

  end subroutine comm_init

  subroutine comm_free
    integer :: ierr

    call MPI_Barrier(NEKO_COMM, ierr)
    call MPI_Comm_free(NEKO_COMM, ierr)
    call MPI_Finalize(ierr)

  end subroutine comm_free

end module comm
