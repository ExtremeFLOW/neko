{
  "version": 1.0,
  "case": {
    "mesh_file": "box.nmsh",
    "output_at_end": false,
    "output_boundary": false,
    "output_directory": "tests/test_fluid_stats",
    "output_checkpoints": false,
    "time": {
        "end_time": 1000,
        "timestep": 1
    },
    "numerics": {
      "time_order": 2,
      "polynomial_order": 3,
      "dealias": true
    },
    "fluid": {
      "scheme": "pnpn",
      "mu": 1,
      "rho": 1,
      "freeze": true,
      "initial_condition": {
        "type": "user"
      },
      "velocity_solver": {
        "type": "cg",
        "preconditioner": {
            "type": "jacobi"
        },
        "projection_space_size": 0,
        "absolute_tolerance": 1e-07,
        "max_iterations": 800
      },
      "pressure_solver": {
        "type": "gmres",
        "preconditioner": {
            "type": "hsmg"
        },
        "projection_space_size": 0,
        "absolute_tolerance": 1e-07,
        "max_iterations": 800
      },
      "output_control": "never"
    },
    "simulation_components": [
      {
        "type": "fluid_stats",
        "set_of_stats": "basic",
        "avg_direction": "xy",
        "compute_control": "tsteps",
        "compute_value": 1,
        "output_control": "tsteps",
        "output_value": 500

      },
      {
        "type": "fluid_stats",
        "output_filename": "stats2d",
        "set_of_stats": "basic",
        "avg_direction": "y",
        "compute_control": "tsteps",
        "compute_value": 1,
        "output_control": "tsteps",
        "output_value": 1000

      },
      {
        "type": "fluid_stats",
        "output_filename": "stats3d",
        "set_of_stats": "basic",
        "compute_control": "tsteps",
        "compute_value": 1,
        "output_control": "tsteps",
        "output_value": 1000

      }
    ]
  }
}
