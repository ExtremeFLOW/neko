@test
subroutine test_space_eq
  use pfunit
  use space
  implicit none
  type(space_t) :: Xh, Yh, Zh

  !
  ! 3D case
  !
  call space_init(Xh, GLL, 10, 10, 10)
  call space_init(Yh, GLL, 10, 10, 10)
  call space_init(Zh, GLL, 4, 4, 4)

  @assertTrue(Xh .eq. Yh)
  @assertFalse(Xh .eq. Zh)

  call space_free(Xh)
  call space_free(Yh)
  call space_free(Zh)

  !
  ! 2xD case
  !
  call space_init(Xh, GLL, 10, 10)
  call space_init(Yh, GLL, 10, 10)
  call space_init(Zh, GLL, 4, 4)

  @assertTrue(Xh .eq. Yh)
  @assertFalse(Xh .eq. Zh)

  call space_free(Xh)
  call space_free(Yh)
  call space_free(Zh)
  
end subroutine test_space_eq

@test
subroutine test_space_ne
  use pfunit
  use space
  implicit none
  type(space_t) :: Xh, Yh, Zh

  !
  ! 3D case
  !
  call space_init(Xh, GLL, 10, 10, 10)
  call space_init(Yh, GLL, 10, 10, 10)
  call space_init(Zh, GLL, 4, 4, 4)

  @assertFalse(Xh .ne. Yh)
  @assertTrue(Xh .ne. Zh)
  @assertTrue(Yh .ne. Zh)

  call space_free(Xh)
  call space_free(Yh)
  call space_free(Zh)

  !
  ! 2xD case
  !
  call space_init(Xh, GLL, 10, 10)
  call space_init(Yh, GLL, 10, 10)
  call space_init(Zh, GLL, 4, 4)

  @assertFalse(Xh .ne. Yh)
  @assertTrue(Xh .ne. Zh)
  @assertTrue(Yh .ne. Zh)

  call space_free(Xh)
  call space_free(Yh)
  call space_free(Zh)
  
end subroutine test_space_ne
