@test
subroutine test_interpolation_edge
  use pfunit
  use num_types, only : i4, rp
  use subset_interpolation, only : subset_interpolation_t
  use subset_interpolation_edge, only : subset_intp_edge_init
  implicit none
  class(subset_interpolation_t), allocatable :: edge
  integer(i4) :: hng

  hng = 1 ! other values should be tasted as well
  call subset_intp_edge_init(hng, edge)

  ! check hanging info
  @assertEqual(edge%hng(), hng)
  ! check dummy operation flag
  @assertFalse(edge%ifdmy())

  ! missing tests for jmat initialisation and interpolation

  call edge%free_jmat()
  deallocate(edge)

end subroutine test_interpolation_edge
