@test
subroutine test_interpolation_vertex
  use pfunit
  use num_types, only : i4, rp
  use subset_interpolation, only : subset_interpolation_t
  use subset_interpolation_vertex, only : subset_intp_vertex_init
  implicit none
  class(subset_interpolation_t), allocatable :: vertex
  integer(i4) :: hng

  hng = 1
  call subset_intp_vertex_init(hng, vertex)

  ! check hanging info
  @assertEqual(vertex%hng(), hng)
  ! check dummy operation flag
  @assertTrue(vertex%ifdmy())

  ! no more tests needed

  call vertex%free_jmat()
  deallocate(vertex)

end subroutine test_interpolation_vertex
