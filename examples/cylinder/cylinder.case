{
"version": 1.0,
"case": {
    "mesh_file": "cylinder.nmsh",
    "output_at_end": true,
    "output_boundary": true,
    "output_checkpoints": true,
    "checkpoint_control": "simulationtime",
    "checkpoint_value": 50,
    "end_time": 200.0,
    "variable_timestep": true,
    "target_cfl": 0.5,
    "max_timestep": 1e-1,
    "numerics": {
        "time_order": 3,
        "polynomial_order": 5,
        "dealias": true
    },
    "fluid": {
        "scheme": "pnpn",
        "Re": 200,
        "initial_condition": {
            "type": "uniform",
            "value": [1.0, 0.0, 0.0]
        },
        "velocity_solver": {
            "type": "cg",
            "preconditioner": "jacobi",
            "projection_space_size": 0,
            "absolute_tolerance": 1e-7,
            "max_iterations": 800
        },
        "pressure_solver": {
            "type": "gmres",
            "preconditioner": "hsmg",
            "projection_space_size": 5,
            "absolute_tolerance": 1e-3,
            "max_iterations": 800
        },
        "boundary_conditions": [
        {
            "type": "velocity_dirichlet",
            "value": [1, 0, 0],
            "zone_index": 1
        },
        {
            "type": "outflow+dong",
            "zone_index": 2
        },
        {
            "type": "normal_outflow",
            "zone_index": 5
        },
        {
            "type": "normal_outflow",
            "zone_index": 6
        },
        {
            "type": "no_slip",
            "zone_index": 7
        }
        ],
        "boundary_types": ["v", "o+dong", "", "", "on", "on", "w"],
        "output_control": "simulationtime",
        "output_value": 2.0
    },
 "simulation_components": 
  [ 
    { 
      "type": "lambda2",// stored in the temperature field, check docs for more details on sim_comps
    },
    { 
      "type": "vorticity", // Stored in scalar 1,2,3. Changes order if simcomp is added before lambda2
    },
    {
      "type": "force_torque",
      "compute_control": "tsteps",
      "compute_value": 10,
      "zone_id": 7,
      "zone_name": "Cylinder",
      "center": [0,0,0],
    },    
    { 
      "type": "fluid_stats",
      "output_control": "simulationtime",
      "output_value": 10,
      "start_time": 50,
      "compute_control": "tsteps",
      "compute_value": 10,
      "avg_direction": "z",
      "set_of_stats": "basic"
    }
  ]   
}
}
