{
"version": 1.0,
"case": {
    "mesh_file": "box.nmsh",
    "output_at_end": true,
    "output_boundary": false,
    "end_time": 2e-3,
    "timestep": 2e-3,
    "output_checkpoints": true,
    "checkpoint_control": "nsamples",
    "checkpoint_value": 1,
    "job_timelimit": "12:00:00",
    "numerics": {
        "time_order": 3,
        "polynomial_order": 7,
        "dealias": true
    },
    "fluid": {
        "scheme": "pnpn",
        "rho": 1,
        "mu": 1,
        "initial_condition": {
            "type": "user",
	    "value": [1.0, 0.0, 0.0]
        },
        "velocity_solver": {
            "type": "cg",
            "preconditioner": "jacobi",
            "projection_space_size": 0,
            "absolute_tolerance": 1e-6,
            "max_iterations": 800
        },
        "pressure_solver": {
            "type": "gmres",
            "preconditioner": "hsmg",
            "projection_space_size": 0,
            "absolute_tolerance": 1e-4,
            "max_iterations": 800
        },
        "output_control": "simulationtime",
        "output_value": 1,
    },
    "scalar": {
	"enabled": true,
	"Pr": 1.0,
	"lambda": 1.0,
	"cp": 1.0
    },
    "point_zones": 
    [
      {
  	"name": "myzone",
	"geometry": "box",
	"x_bounds": [0.4, 0.6],  
	"y_bounds": [0.4, 0.6],  
	"z_bounds": [0.4, 0.6]  
      },
      {
  	"name": "mysphere",
	"geometry": "sphere",
	"center": [0.15, 0.15, 0.15],
	"radius": 0.2
      }
   ],
  }
}
